{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "delta-comic",
  "version": "0.1.0",
  "identifier": "org.dc",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "pnpm dev:web",
    "beforeBuildCommand": "pnpm build:web"
  },
  "app": {
    "windows": [
      {
        "title": "Delta Comic",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "android": {
      "autoIncrementVersionCode": false,
      "minSdkVersion": 24
    }
  }
}